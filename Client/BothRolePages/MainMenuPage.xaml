<Page x:Class="Client.BothRolePages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid Background="White">
        <StackPanel Orientation="Horizontal" Width="800">
            <Button Height="200" Width="200" Margin="50" HorizontalAlignment="Left" Content="Загадывать" FontSize="20" Click="BTN_MakeSecret" Name="BTNMake"/>
            <TextBlock Text="Выбери роль" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="33"/>
            <Button Height="200" Width="200" Margin="50,50,50,50" HorizontalAlignment="Right" Content="Отгадывать" FontSize="20" Click="BTN_DestroySecret" Name="BTNDestroy"/>
        </StackPanel>
    </Grid>
</Page>
