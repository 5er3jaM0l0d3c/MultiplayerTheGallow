<Page x:Class="Client.MakerSecretsPages.MakerMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="MakerMainPage">

    <Grid Background="White">
        <TextBlock Text="Для продолжения нажмите любую клавишу" Foreground="White" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Name="TBXtoMainMenu" KeyDown="TBX_toMainMenu"/>
        <StackPanel Name="SPNOther" VerticalAlignment="Center">
            
            <StackPanel Name="SPNSecretWord" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            
            </StackPanel>
            <TextBlock HorizontalAlignment="Left" Text="Последняя использованная буква:" FontSize="20" Margin="5"/>
            <Label Content="" FontSize="30" Name="LBLLastLetter" Margin="5"/>
            <StackPanel Orientation="Horizontal" Name="SPNMistakes">
                <TextBlock Text="Ошибок осталось:" FontSize="20" Margin="5"/>
                <Label Name="LBLNumOfMistakes" FontSize="20" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
